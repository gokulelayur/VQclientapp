<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primer_orange"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="3"-->
<!--            android:paddingTop="30dp"-->
<!--            android:paddingBottom="20dp"-->
<!--            android:src="@drawable/img" />-->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:lottie_rawRes="@raw/inext5"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"/>

        //BOTTOM RECTANGLE

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_rectangle"
            android:orientation="vertical">


            //FOR CIRCLE

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:layout_weight="3.5"
                android:gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_height="match_parent"
                        android:layout_width="120dp"
                        android:background="@drawable/signin_circle"
                        app:lottie_rawRes="@raw/signinlottie"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        />




            </LinearLayout>

            //SIGNUP

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="top">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="REGISTER"
                    android:textSize="25sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_blue"
                    android:layout_weight="15"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">


                    <EditText
                        android:id="@+id/cname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_edittext"
                        android:elevation="2dp"
                        android:paddingVertical="7dp"
                        android:paddingStart="30dp"
                        android:hint="Company Name"
                        android:textColor="@color/edittext_font"
                        android:textColorHint="@color/Hintcolor"
                        android:textSize="25sp"
                        android:layout_marginTop="9dp"/>

                    <EditText
                        android:id="@+id/catagory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_edittext"
                        android:elevation="2dp"
                        android:paddingVertical="7dp"
                        android:paddingStart="30dp"
                        android:hint="Category"
                        android:textColor="@color/edittext_font"
                        android:textColorHint="@color/Hintcolor"
                        android:textSize="25sp"
                        android:layout_marginTop="9dp"/>
                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_edittext"
                        android:elevation="2dp"
                        android:paddingVertical="7dp"
                        android:paddingStart="30dp"
                        android:hint="Description"
                        android:textColor="@color/edittext_font"
                        android:textColorHint="@color/Hintcolor"
                        android:textSize="25sp"
                        android:layout_marginTop="9dp"/>
                    <EditText
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_edittext"
                        android:elevation="2dp"
                        android:paddingVertical="7dp"
                        android:paddingStart="30dp"
                        android:hint="Map Link"
                        android:textColor="@color/edittext_font"
                        android:textColorHint="@color/Hintcolor"
                        android:textSize="25sp"
                        android:layout_marginTop="9dp"/>
                    <Button
                        android:id="@+id/firstDetailsNextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_button"
                        android:text="Next"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/secondary_blue"
                        android:paddingHorizontal="50dp"
                        android:paddingVertical="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>