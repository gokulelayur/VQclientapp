<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="370dp"
    android:layout_gravity="center"
    android:background="@color/quartGrey"
    android:paddingHorizontal="5dp">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter Details"
        android:textColor="@color/secondary_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newCustName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/add_customer_popup_background"
        android:hint="Name"
        android:paddingVertical="5dp"
        android:paddingStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/newCustPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/add_customer_popup_background"
        android:hint="Place"
        android:paddingVertical="5dp"
        android:paddingStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/newCustName" />

    <EditText
        android:id="@+id/newCustAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/add_customer_popup_background"
        android:hint="Age"
        android:paddingVertical="5dp"
        android:paddingStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/newCustPlace"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/popUpAddNewCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_corner_button"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:text=" Add Customer"
        android:textColor="@color/white"
        app:backgroundTint="@color/secondary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCustAge" />


    <ImageView
        android:id="@+id/popupClosebuttImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="Close"
        android:src="@drawable/ic_cross_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>